<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.warningActivity">

    <LinearLayout
            android:background="@color/colorAccent"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:layout_marginRight="@dimen/warningContentMargin"
                    android:layout_marginLeft="@dimen/warningContentMargin"
                    android:layout_margin="@dimen/warningTextPadding"
                    android:orientation="vertical"
                    android:background="@drawable/warning_view_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/warningTitleText"
                        android:textAlignment="center"
                        android:padding="@dimen/warningTextPadding"
                        android:text="Title"
                        android:textColor="@color/DarkGrey"
                        android:textStyle="bold"
                        android:textSize="@dimen/warningTextTitleTextSize"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                <TextView
                        android:id="@+id/warningDescriptionText"
                        android:textAlignment="center"
                        android:padding="@dimen/warningTextPadding"
                        android:text="Description"
                        android:textColor="@color/DarkGrey"
                        android:textStyle="normal"
                        android:textSize="@dimen/warningTextDescriptionSize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>