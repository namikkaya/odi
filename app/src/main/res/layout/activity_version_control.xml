<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.versionControlActivity">
    <LinearLayout
            android:background="@color/blackTransparent"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
                android:padding="32dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:gravity="center"
                    android:layout_marginRight="@dimen/warningContentMargin"
                    android:layout_marginLeft="@dimen/warningContentMargin"
                    android:layout_margin="@dimen/warningTextPadding"
                    android:orientation="vertical"
                    android:background="@drawable/warning_view_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <ImageView
                        android:src="@drawable/odi_update_icon"
                        android:layout_width="120dp"
                        android:layout_height="120dp"/>

                <TextView
                        android:textAlignment="center"
                        android:padding="@dimen/warningTextPadding"
                        android:text="Yeni Sürüm Mevcut"
                        android:textColor="@color/DarkGrey"
                        android:textStyle="bold"
                        android:textSize="@dimen/warningTextTitleTextSize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/versionDecs"
                        android:textAlignment="center"
                        android:padding="@dimen/warningTextPadding"
                        android:text="Merhaba, sizden gelen geri bildirimlere göre uygulamamızı güncelledik. Yeni sürümde hataları giderip, performansı arttırdık. Hemen yeni sürüme geçerek odileyebilirsin."
                        android:textColor="@color/DarkGrey"
                        android:textStyle="normal"
                        android:textSize="@dimen/warningTextDescriptionSize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <ImageButton
                        android:id="@+id/googlePlayButton"
                        android:layout_marginTop="16dp"
                        android:background="@null"
                        android:src="@drawable/google_play_button"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>