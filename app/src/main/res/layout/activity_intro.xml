<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.introActivity">

    <LinearLayout
            android:weightSum="20"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="18">

        </android.support.v4.view.ViewPager>

        <LinearLayout
                android:gravity="right"
                android:weightSum="3"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">

            <RelativeLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                <LinearLayout
                        android:gravity="center"
                        android:weightSum="3"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <FrameLayout
                            android:id="@+id/slidePagerItemOne"
                            android:layout_margin="2dp"
                            android:layout_gravity="center"
                            android:background="@drawable/slide_viewpager_round_selected"
                            android:layout_width="10dp"
                            android:layout_height="10dp">

                    </FrameLayout>

                    <FrameLayout
                            android:id="@+id/slidePagerItemTwo"
                            android:layout_margin="2dp"
                            android:layout_gravity="center"
                            android:background="@drawable/slide_viewpager_round"
                            android:layout_width="10dp"
                            android:layout_height="10dp">

                    </FrameLayout>

                    <FrameLayout
                            android:id="@+id/slidePagerItemThree"
                            android:layout_margin="2dp"
                            android:layout_gravity="center"
                            android:background="@drawable/slide_viewpager_round"
                            android:layout_width="10dp"
                            android:layout_height="10dp">

                    </FrameLayout>


                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                <Button
                        android:id="@+id/slideNextButton"
                        android:background="@drawable/slide_button"
                        android:textAllCaps="false"
                        android:layout_margin="8dp"
                        android:gravity="center"
                        android:text="Geç"
                        android:textSize="16sp"
                        android:textColor="@color/White"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                <Button
                        android:id="@+id/slideOkeyButton"
                        android:visibility="gone"
                        android:background="@drawable/slide_button"
                        android:textAllCaps="false"
                        android:layout_margin="8dp"
                        android:gravity="center"
                        android:text="Anladım"
                        android:textSize="16sp"
                        android:textColor="@color/White"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>